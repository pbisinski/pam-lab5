<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.nazwisko.lab5_start">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".BookWebApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AboutProgramActivity"
            android:label="@string/about_program" />
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/title_activity_books_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.list.BooksListActivity"
            android:label="@string/books_list">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeActivity" />
        </activity>
        <activity
            android:name=".activities.list.CommentsListActivity"
            android:label="@string/comments_list">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeActivity" />
        </activity>
        <activity
            android:name=".activities.add.AddCommentActivity"
            android:label="@string/new_comment">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeActivity" />
        </activity>
        <activity
            android:name=".activities.add.AddReviewActivity"
            android:label="@string/add_review">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeActivity" />
        </activity>
        <activity
            android:name=".activities.list.ReviewsListActivity"
            android:label="@string/list_reviews">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeActivity" />
        </activity>
    </application>

</manifest>